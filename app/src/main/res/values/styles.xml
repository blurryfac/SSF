<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">>
        <item name="android:textSize">@dimen/side_letter_bar_letter_size</item>
    </style>

    <style name="rl_style">
        <item name="android:paddingRight">16sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--底部导航栏样式-->
    <style name="rb_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/rb_menu_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="rl_info_style">
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="main_tab_style">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <!--编辑框样式-->
    <style name="edit_style">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textCursorDrawable">@drawable/et_curor_shape</item>
        <item name="android:background">@drawable/edit_layer_list</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--编辑框样式-->

    <style name="rb_style">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textColor">@drawable/tab_menu_text_1</item>
    </style>
    <!--编辑框样式-->
    <style name="edit_style1">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textCursorDrawable">@drawable/et_curor_shape</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tv_style">
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    <!--编辑框样式-->
    <style name="edit_info_style">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <!--<item name="android:textCursorDrawable">@drawable/et_curor_shape</item>-->
        <item name="android:background">@drawable/edit_layer_list</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:scrollHorizontally">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog2" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--编辑框样式-->
    <style name="edit_search_style">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textCursorDrawable">@drawable/et_curor_shape</item>
        <item name="android:background">@drawable/btn_gray_shape</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--城市选择-->
    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <!--底部导航栏样式-->
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="tab_menu_item_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@drawable/tab_menu_text_1</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--评分星级条样式-->
    <style name="roomRatingBar_1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_eva</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>
    <!--底部弹出dialog-->
    <style name="dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/dialog_edit</item>
        <!-- 退出时的动画 -->
    </style>
    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog_1" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:scrollHorizontally">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ll_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_15</item>
    </style>


</resources>
