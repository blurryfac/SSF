<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/app_bar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <EditText
            android:id="@+id/et_reg_mobile"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="3"
            android:background="@drawable/edit_layer_list"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入新手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/edit_layer_list"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_reg_code"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的验证码"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/btn_reg_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/btn_orange_line_shape"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="获取验证码"
                android:textColor="#FF8E38"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/btn_blue_gradient_shape"
            android:text="保存"
            android:textColor="@color/white" />



    </LinearLayout>
</LinearLayout>