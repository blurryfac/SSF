<?xml version="1.0" encoding="utf-8"?>
<com.shanchuang.ssf.utils.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llt_shopping_goods_item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_itemType="main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_shopping_item_check_item_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@null"
                android:drawableLeft="@drawable/cb_main_selector"
                android:padding="@dimen/dp_10" />


            <com.shanchuang.ssf.view.ImageViewPlus
                android:id="@+id/iv_shopping_item_img_item_item"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                app:radios="1.0"
                app:type="rounded_rect"
                app:rectRoundRadius="@dimen/dp_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shopping_item_title_item_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="商品名称" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"

                    android:text="content"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/iv_shopping_item_add_item_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_below="@+id/tv_shopping_item_title_item_item"
                    tools:text="￥50"
                   />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_shopping_item_price_item_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 1"
                        android:layout_alignParentBottom="true"
                        android:textColor="#F84049"
                        android:textSize="18sp" />
                    <com.shanchuang.ssf.view.adderView
                        android:id="@+id/addr_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_shopping_item_delete_item_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#E75A5A"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</com.shanchuang.ssf.utils.SwipeItemLayout>