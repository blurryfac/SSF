<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_main"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/btn_white_shape">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_cate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray1"/>
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:textColor="#1090FF"
                    android:text="查看更多"/>
            </LinearLayout>
            <com.shanchuang.ssf.view.XRadioGroup
                android:id="@+id/xg_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"

                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/btn_half_top_white_shape">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rb_dian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:textColor="@drawable/tab_menu_text"
                        android:text="点工"/>
                    <TextView

                        android:id="@+id/tv_dian"
                        android:layout_width="29dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/btn_yellow_3_shape"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/ll_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rb_bao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:textColor="@drawable/tab_menu_text"
                        android:text="包工"/>
                    <TextView
                        android:id="@+id/tv_bao"
                        android:layout_width="29dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/btn_white_shape"/>
                </LinearLayout>
            </com.shanchuang.ssf.view.XRadioGroup>
            <LinearLayout
                style="@style/ll_style"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*服务描述"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:text="安装空调，会进行水电维修管道铺设的
工人接单施工。"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                style="@style/ll_style"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*施工地点"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="河南省郑州市高新区"
                        android:drawableRight="@mipmap/ic_main_right"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@color/gray1"/>
                    <TextView
                        android:id="@+id/tv_address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="河南省郑州市高新区"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/ll_style"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*预算金额"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <EditText
                    android:id="@+id/et_ys_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入预算金额"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                style="@style/ll_style"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*开工日期"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_work_time"
                        android:layout_width="@dimen/dp_115"
                        android:layout_height="@dimen/dp_21"
                        android:text="2019-11-15"
                        android:gravity="center"
                        android:background="@drawable/btn_gray_20_shape"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@color/gray1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预计用工"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            />
                        <EditText
                            android:id="@+id/et_work_day_num"
                            android:layout_width="@dimen/dp_54"
                            android:layout_height="@dimen/dp_21"
                            android:background="@drawable/btn_gray_20_shape"
                            android:inputType="number"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="#ff333333"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                style="@style/ll_style"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*联系人"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入联系人姓名"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            <LinearLayout
                style="@style/ll_style"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*联系人电话"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入联系人电话"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            <LinearLayout
                style="@style/ll_style"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*工作留言"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:background="@color/gray1"/>
                <EditText
                    android:id="@+id/et_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="请输入你的需求要注意事项"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="5dp"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:minHeight="@dimen/dp_60"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_style"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/btn_white_shape"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*图纸照片"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*备注说明"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#ff777777"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="可在此描述图纸的说明"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="5dp"
                    android:background="@drawable/btn_gray_shape"
                    android:textColor="@color/black"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:minHeight="@dimen/dp_90"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb_xy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="同意"
                    android:drawablePadding="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:drawableLeft="@drawable/cb_main_selector"/>
                <TextView
                    android:id="@+id/tv_xy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《工人须知》"
                    android:textColor="#ff357aeb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_39"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp_20"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_orange_gradient_shape"
                android:text="发布"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>