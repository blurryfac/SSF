<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/ic_finish_bg"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_round_ng"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/back_img"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="50sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成绩(分)"

                android:textColor="#ffa9c6ff"
                android:textSize="16sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_white_shape"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_280"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_result_status"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#ff333333"
            android:textSize="21sp"
            />
        <TextView
            android:id="@+id/tv_result_get_score"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#ffff9c16"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/iv_result_status"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"

            />
        <TextView
            android:id="@+id/tv_result_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_check_answer"
            android:layout_width="182dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="查看解析"
            android:background="@drawable/btn_blue_gradient_shape"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_back_main"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="返回首页"
            android:gravity="center_vertical"
            android:textColor="#ff41a6ff"
            android:textSize="14sp"
            />
    </LinearLayout>
</RelativeLayout>