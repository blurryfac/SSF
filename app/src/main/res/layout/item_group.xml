<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_top_line"
        android:layout_width="1dp"
        android:background="@color/colorBtn"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_height="45dp"/>
    <LinearLayout
        android:layout_below="@+id/tv_top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/btn_red_5_shape"/>
            <TextView
                android:layout_width="1dp"
                android:background="@color/colorBtn"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_group_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-10-10"
                android:layout_marginLeft="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="#ff409ffb"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_group_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#ff409ffb"
                android:textSize="12sp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_8"
                android:layout_margin="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今天又学习了一早上！"
                        android:layout_marginRight="@dimen/dp_10"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:textColor="#ff666666"
                        android:textSize="14sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rec_imgs"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>