<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_main"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center_vertical"
                android:background="@drawable/btn_white_shape"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">
                <com.shanchuang.ssf.view.ImageViewPlus
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/dp_50"
                    app:type="circle"
                    android:layout_height="@dimen/dp_50"
                    android:src="@color/black"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="牛大拿"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/iv_tips"
                            android:layout_toRightOf="@+id/tv_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="诚信商家"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:drawableLeft="@mipmap/ic_work_bz"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textColor="#ff1090ff"
                            android:textSize="12sp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#ffb6b6b6"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_check_eva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看评价"
                    android:gravity="center"
                    android:background="@mipmap/ic_work_right"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/btn_white_shape"
                android:layout_marginBottom="@dimen/dp_10"
                android:padding="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_work_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:text="安装空调，会进行水电维修管道铺设的工人接
单施工。"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预算金额："
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/tv_work_estimated_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥456"
                        android:textColor="#ffff5757"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_work_address"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="郑州市高新区科学大道信息工程大学对..."
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/tv_work_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        tools:text="18km"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@mipmap/ic_locate"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/iv_order_status"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_work_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            tools:text="开工时间: 2018-11-5"
                            android:textColor="#ff555555"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_work_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="预计工期: 待仪"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#ff555555"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_work_release_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="发布时间: 2018-11-5  20:25"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#ff555555"
                            android:textSize="13sp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工种类型："
                                android:textColor="#555555"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:id="@+id/tv_worker_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电工"
                                android:textColor="#ffff5757"
                                android:textSize="15sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_woker_untake"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_work_see_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1673"
                    android:drawableStart="@mipmap/ic_worker_see"
                    android:drawablePadding="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#ffff6b0c"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/gray1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="4dp"
                        android:layout_height="@dimen/dp_16"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/btn_black_shape"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="施工描述"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_work_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="由于管道工程涉及协调单位较多，为保证工程进度，又经
常要进行交叉施工，故在施工时现场施工人员必须随时注
意管道施工动态。"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:textColor="#ff7e7e7e"
                    android:textSize="13sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雇主已支付押金："
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/tv_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥456"
                        android:textColor="#ffff5757"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图纸照片"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注说明"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/tv_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="由于管道工程涉及协调单位较多，为保证工程进度，又经
常要进行交叉施工，故在施工时现场施工人员必须随时注
意管道施工动态。"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:textColor="#ff7e7e7e"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/cb_main_selector"
                    />
                <TextView
                    android:id="@+id/tv_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 已阅读《工人须知》 《雇主须知》"
                    android:textColor="#ff357aeb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_20"
                android:layout_width="@dimen/dp_152"
                android:layout_height="@dimen/dp_40"
                android:text="立即报名"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/btn_orange_gradient_shape"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>