<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_login_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_20"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_220"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_15"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="快速登录"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ff333333"
                        android:textSize="20sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/btn_gray_20_shape"
                        android:layout_marginRight="@dimen/dp_20"
                        android:paddingRight="10dp">

                        <EditText
                            android:id="@+id/et_login_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/ic_login_mobile"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:hint="请输入您的手机号"
                            android:inputType="textVisiblePassword"
                            android:maxLength="11"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/_9"
                            android:textColorHint="@color/_9"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_clean_phone"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_clear"
                            android:visibility="gone" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_gray_20_shape"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingRight="10dp">

                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@mipmap/ic_login_pwd"
                            android:drawablePadding="@dimen/dp_10"
                            android:hint="请输入收到验证码"
                            android:inputType="number"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@color/_9"
                            android:textColorHint="@color/_9"
                            android:textSize="14dp" />
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="#bfbfbf"/>

                        <TextView
                            android:id="@+id/tv_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:textColor="#616161"
                            android:text="获取" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <CheckBox
                            android:id="@+id/cb_xieyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/cb_main_selector"
                            android:drawablePadding="@dimen/dp_10"
                            />
                        <TextView
                            android:id="@+id/tv_xieyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="同意"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/btn_orange_gradient_shape"
                        android:text="登 录"
                        android:textColor="@color/white" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/ic_login_other_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <TextView
                            android:id="@+id/tv_login_weixin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="@dimen/dp_20"
                            android:drawableTop="@mipmap/ic_login_wx"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="微信登录" />
                    </RelativeLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    </ScrollView>

</LinearLayout>