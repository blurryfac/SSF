<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.youth.banner.Banner
                    android:id="@+id/img_shop_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_374" />
                <ImageView
                    android:id="@+id/iv_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/ic_detail_back"/>
                <ImageView
                    android:id="@+id/iv_detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/ic_detail_share"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_detail_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:id="@+id/tv_shop_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="42.00"
                    android:textColor="#ffff4d4d"
                    android:textSize="25sp"
                    />


                <TextView
                    android:id="@+id/tv_pay_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1101人付款"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="#ff838383"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:id="@+id/tv_shop_detail_title"
                android:lineSpacingExtra="@dimen/dp_5"
                tools:text="枕上诗书：一本书读懂最美古诗词（【彩图珍藏
版】《中国诗词大会》经典诗词精选）"
                android:textColor="#ff333333"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_shop_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                tools:text="全三册注音插图版，收藏阅读两不耽误"
                android:textColor="#ffb0b0b0"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f8"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_shop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="店铺详情"
                    android:textColor="@color/_30" />

                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_shop_text"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:hint="进店"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@mipmap/ic_main_right"
                    android:layout_alignParentRight="true"

                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_f8"/>
            <RelativeLayout
                android:id="@+id/ll_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_coupon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="商品优惠券"
                    android:textColor="@color/_30" />

                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_coupon_text"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:hint="领取"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@mipmap/ic_main_right"
                        android:layout_alignParentRight="true"

                        />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f8"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_eva_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_10"
                    tools:text="商品评论（25）"
                    android:textColor="@color/_30" />

                <TextView
                    android:id="@+id/tv_eva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:hint="查看全部"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@mipmap/ic_main_right"
                    android:layout_alignParentRight="true"

                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图文详情"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="#ff333333"
                android:textSize="16sp"
                />
            <WebView
                android:id="@+id/web_shop_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/cb_shop_coll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="10dp"

            android:textSize="@dimen/dp_15"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_coll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="收藏"
                android:button="@null"

                android:drawableTop="@drawable/cb_coll_selector"/>
            <TextView
                android:id="@+id/tv_add_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#FE8331"
                android:button="@null"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="加入购物车"
                android:textSize="@dimen/dp_15"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_shop_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/btn_blue_gradient_z_shape"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>