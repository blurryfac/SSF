<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_shape"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_shopping_item_check_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:visibility="gone"
            android:drawableLeft="@drawable/cb_main_selector"
            android:padding="@dimen/dp_10"
             />

        <TextView
            android:id="@+id/tv_shopping_item_name_item"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/more_1x"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="欧比亚斯" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f8"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_shopping_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>