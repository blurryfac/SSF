<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/dp_5"
    android:layout_margin="10dp"
    >


        <com.shanchuang.ssf.view.ImageViewPlus
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:radios="1"
            app:rectLeftTopRoundRadius="true"
            app:rectRightTopRoundRadius="true"
            app:type="rounded_rect" />

        <TextView
            android:id="@+id/tv_mail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_main_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="全三册注音插图版，收藏阅读两不耽误"
        android:textColor="#ff8c8c8c"
        android:textSize="12sp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_mail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4D4D"
                android:text="30"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_mail_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#838383"
                android:text="销量2.1w"
                android:textSize="11sp" />
        </RelativeLayout>



</LinearLayout>