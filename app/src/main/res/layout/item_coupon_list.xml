<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@mipmap/ic_detail_coupon"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mj_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_gravity="bottom"
                android:textColor="#ffd5ab5b"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="366"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="#ffd5ab5b"
                android:textSize="35sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满100元可用"
            android:gravity="center"
            android:textColor="#ff888888"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/sp_16"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textStyle="bold"
                android:textColor="#ff444444"
                android:textSize="18sp"
                />

        <TextView
            android:id="@+id/tv_coupon_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="有效日期：2020-02-03"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_coupon_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="华帝郑州学府家园店"
            android:textColor="#ff999999"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="12sp"
            />
    </LinearLayout>


</LinearLayout>