<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.shanchuang.ssf.view.ImageViewPlus
        android:id="@+id/iv_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:rectRoundRadius="6dp"
        android:layout_gravity="center_vertical"
        app:type="rounded_rect"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_5"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#ff409ffb"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_video_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">
            <TextView
                android:id="@+id/tv_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff3d3d"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_old_price"
                android:layout_toEndOf="@+id/tv_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="#ffaaaaaa"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/tv_video_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/ic_video_yan"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>