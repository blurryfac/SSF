<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/btn_white_shape"
    android:layout_marginBottom="@dimen/dp_10"
    android:padding="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="安装空调，会进行水电维修管道铺设的工人接
单施工。"
        android:textColor="#ff333333"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预算金额："
            android:textColor="@color/black"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_work_estimated_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥456"
            android:textColor="#ffff5757"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_work_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="郑州市高新区科学大道信息工程大学对..."
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_work_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            tools:text="18km"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@mipmap/ic_locate"
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/gray1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_order_status"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_work_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                tools:text="开工时间: 2018-11-5"
                android:textColor="#ff555555"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_work_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="预计工期: 待仪"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#ff555555"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_work_release_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="发布时间: 2018-11-5  20:25"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#ff555555"
                android:textSize="13sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工种类型："
                    android:textColor="#555555"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/tv_worker_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电工"
                    android:textColor="#ffff5757"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_woker_untake"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_work_see_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1673"
        android:drawableStart="@mipmap/ic_worker_see"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#ffff6b0c"
        android:textSize="13sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/gray1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雇主已支付押金："
            android:textColor="@color/black"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥456"
            android:textColor="#ffff5757"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>